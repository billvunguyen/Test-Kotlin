<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="4dp"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView

        android:id="@+id/fileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Hash : "
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/TotalScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Scan : "
        android:textSize="25dp"
        android:layout_below="@+id/fileName"/>
    <TextView
        android:id="@+id/TotalScanPositives"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Positives : "
        android:textSize="25dp"
        android:layout_below="@+id/TotalScan"/>
    <TextView
        android:id="@+id/infor"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If total Positives/total Scan is less 0.5, this application is safe"
        android:layout_below="@+id/TotalScanPositives"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/btn_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Test Security Application" />
</RelativeLayout>